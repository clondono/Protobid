<h2>Sign up</h2>


<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


  <%= f.label "Profile Type" %>
  <div style="float:left; margin-right:5px">


  <%= label :niche, 'Vendor' %>
  <%= f.radio_button :niche, "Vendor"%>
  </div>
  <div>
  <%= label :niche, 'Engineer' %>
  <%= f.radio_button :niche, "Engineer"%>
  </div>
  
  <div style="float:left; margin-right:5px"><%= f.label "Prefix" %>
  <%= f.select(:prefix, options_for_select(["Mr.", "Mrs.", "Ms."])) %>
  
  <div style="float:left; margin-right:5px"><%= f.label "First name" %>
  <%= f.text_field :firstname%></div>

  <div><%= f.label "Last name" %>
  <%= f.text_field :lastname  %></div>

  <div><%= f.label :email %>
  <%= f.email_field :email %></div>

  <div style="float:left; margin-right:5px"><%= f.label :password %>
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.label :country %>
  <%= f.text_field :country  %></div>

  <div><%= f.label :state %>
  <%= f.text_field :state  %></div>

  <div><%= f.label "Company name" %>
  <%= f.text_field :company  %></div>


  </br>

  <div><%= f.submit "Sign up" %></div>
  
<% end %>

<%= render "devise/shared/links" %>
