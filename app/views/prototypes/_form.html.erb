<%= form_for(@prototype) do |f| %>
  <% if @prototype.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@prototype.errors.count, "error") %> prohibited this prototype from being saved:</h2>

      <ul>
      <% @prototype.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div style="float:left; margin-right:5px">
  <%= label :open, 'Public' %>
  <%= f.radio_button :open, true %>
  </div>
  <div>
  <%= label :open, 'Private' %>
  <%= f.radio_button :open, false %>
  </div>

  <div class="field">
    <%= f.file_field :attachment%>
  </div>

  <div class="field">
    <%= f.label :material %>
        <%= f.select(:material, options_for_select(["soft metals", "aluminum", "steel", "wood", "plastic"])) %>
  </div>
  <div class="field">
    <%= f.label :tolerance %><br />
    <%= f.text_area :tolerance %>
  </div>
  <div class="field">
    <%= f.label :volume %><br />
    <%= f.text_field :volume %>
    <%= f.select(:units, options_for_select(["mm^3", "cm^3", "m^3"])) %>

  </div>
  <div class="field">
    <%= f.label :comment %><br />
    <%= f.text_area :comment %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
