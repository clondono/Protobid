<!DOCTYPE html>
<html>
	<head>
	  <title>
	  	Protobid | <%=yield(:title) %>
	  </title>
	  <%= stylesheet_link_tag    "application", :media => "all" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
		<div id="header_bar">
			<div style ="display:inline-block">
				<%= image_tag("logo.png", :height => '75', :width => '200')%>				
				<h3 style="margin:0px;padding:0px">Get it built.</h3>
				<h3 style="margin:0px;padding:0px">Fast.</h3>
			</div>
			<div class="nav-holder">
				<div  id="main_nav" >
					<ul>
						<li>
							<a href="/browse/home" class="nav_item">Home</a>
						</li>
						<li>
							<a href="/browse/about" class="nav_item">About Us</a>
						</li>
						<li>
							<a href="/browse/terms" class="nav_item">Terms of Service</a>
						</li>
					</ul>
				</div>
			</div>
			<div id="login">
				<% if user_signed_in? %>
					<li>
				  		<%= link_to('Logout', destroy_user_session_path, :method => :delete) %>        
				  	</li>
				<% else %>
				  	<li>
				  		<%= link_to('Login', new_user_session_path)  %>  
					</li>
						or
					<li>
  						<%= link_to('Sign up', new_user_registration_path)  %>
  					</li>
				<% end %>
			</div>
		</div>
	</head>
	<body>
		<div>
			<%= yield %>
		</div>
	</body>
</html>